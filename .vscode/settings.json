{
  /*
    terminal 관련 설정은 프로젝트 .vscode/setting.json 에서는 정상 작동하지 않음.
    전역 setting.json 에 설정해야 함.
    위치: /data/user-data/User/setting.json
  */
  "terminal.integrated.fontWeightBold": "bold",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.fontWeight": "normal",
  // "terminal.integrated.fontFamily": "Courier New",
  "terminal.integrated.fontFamily": "나눔고딕코딩",

  /*
    window 관련 설정은 프로젝트 .vscode/setting.json 에서는 정상 작동하지 않음.
    다른 파일에 설정해야 함.
    위치: /data/user-data/User/setting.json
  */
  "window.zoomLevel": 1,
  
  /*
    workbench 관련 설정은 프로젝트 .vscode/setting.json 에서는 정상 작동하지 않음.
    다른 파일에 설정해야 함.
    위치: /data/user-data/User/setting.json
  */
  // "workbench.colorTheme": "Default Light+",
  "workbench.startupEditor": "none",

  /*
    update 관련 설정은 프로젝트 .vscode/setting.json 에서는 정상 작동하지 않음.
    다른 파일에 설정해야 함.
    위치: /data/user-data/User/setting.json
  */
  "update.enableWindowsBackgroundUpdates": false,
  "update.mode": "none",

  // files
  "files.autoSave": "afterDelay",
  "files.insertFinalNewline": false,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/.idea": true,
    "**/.vscode": false,
    "**/yarn.lock": true,
    "**/tmp": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "files.watcherExclude": {
    "**/.git/**": true,
    "**/node_modules/**": true,
    "**/tmp": true,
    "**/build": true
  },
  "editor.minimap.enabled": false,
  
  
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.fontFamily": "나눔고딕코딩",
  "editor.fontLigatures": true,
  /* 저장 시 해당 파일 전체 포맷 여부 */
  "editor.formatOnSave": true,
  /* 해당값 true로 설정 시 ; 을 입력하면 해당 라인이 파일에 설정된 포맷에 따라 가게됩니다.  */
  "editor.formatOnType": false,
  /* 붙여넣기 시 해당 텍스트 포맷 여부. */
  "editor.formatOnPaste": false,
  /* 기본 Formatter 설정 */
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.snippetSuggestions": "top",
  "editor.fontSize": 15,
  "editor.renderWhitespace": "all",
  "editor.detectIndentation": false,
  "editor.codeActionsOnSave": {
    // For ESLint
    //"source.fixAll.eslint": true,
    "source.fixAll": true
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "diffEditor.ignoreTrimWhitespace": false,
  // git
  "git.autofetch": false,
  "git.enableSmartCommit": true,
  //html
  "html.format.preserveNewLines": true,
  "html.format.unformatted": "xmp,pre,code,textarea",
  "html.format.contentUnformatted": "xmp,pre,code,textarea",
  "html.format.extraLiners": "",
  "html.format.wrapAttributes": "force",
  "html.format.wrapLineLength": 0,
  "html.format.indentInnerHtml": true,
  "html.suggest.html5": true,
  "auto-close-tag.activationOnLanguage": [
    "xml",
    "php",
    "blade",
    "ejs",
    "jinja",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "plaintext",
    "markdown",
    "vue",
    "liquid",
    "erb",
    "lang-cfml",
    "cfml",
    "HTML (EEx)",
    "HTML (Eex)",
    "plist"
  ],
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.git": true,
    "**/.DS_Store": true,
    "**/tmp": true,
    "**/coverage": true,
    "**/build": true,
    "**/Pods": true,
    "**/*.xcodeproj": true,
    "**/*.xcworkspace": true,
    "**/.meteor": true
  },

  "[css]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "octref.vetur"
  },
  "[xml]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "python.linting.pylintEnabled": true,
  // https://progrunman.tistory.com/0
  "python.linting.pylintArgs": ["--disable=W0104"],

  "[python]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.defaultFormatter": "ms-python.python"
  }
}
